{
  "manifest_version": 2,
  "name": "Ticket To HipChat",
  "short_name": "ticket2hc",
  "description": "Paste current Kayako ticket ID to desired HipChat room",
  "version": "0.2",
  "author": "Sergiy Lilikovych",
  "options_ui": {
    "page": "options.html",
    "chrome_style": true
  },
  "browser_action": {
    "default_icon": "images/icon128.png",
    "default_popup": "popup.html",
    "default_title": "Push current ticket ID from Kayako to HipChat"
  },
  "icons": {
    "48": "images/icon48.png",
    "96": "images/icon96.png",
    "128": "images/icon128.png"
  },
  "permissions": [
    "activeTab"
  ],
  "applications": {
    "gecko": {
      "id": "sergiy@lilikovych.name"
    }
  }
}
